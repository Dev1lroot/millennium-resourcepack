{
  "model": {
    "type": "minecraft:composite",
    "models": [
      {
        "type": "minecraft:model",
        "model": "minecraft:item/potion",
        "tints": [
          {
            "type": "minecraft:potion",
            "default": -13083194
          }
        ]
      },
      {
        "type": "minecraft:condition",
        "property": "minecraft:has_component",
        "component": "minecraft:custom_name",
        "on_false": {
          "type": "minecraft:empty"
        },
        "on_true": {
          "type": "minecraft:select",
          "property": "minecraft:component",
          "component": "minecraft:custom_name",
          "fallback":{
            "type": "minecraft:empty"
          },
          "cases": [
            {
              "when": ["Coca-Cola", "Кока-Кола", "Coca Cola"],
              "model": {
                "type": "minecraft:model",
                "model": "minecraft:item/beverages/cocacola"
              }
            },
            {
              "when": ["Аптечка","Хилка","First Aid"],
              "model": {
                "type": "minecraft:select",
                "property": "minecraft:component",
                "component": "minecraft:potion_contents",
                "fallback":{
                  "type": "minecraft:empty"
                },
                "cases": [
                  { 
                    "when": "minecraft:healing", 
                    "model": {
                      "type": "minecraft:model",
                      "model": "minecraft:item/tools/first_aid"
                    }
                  },
                  { 
                    "when": "minecraft:strong_healing", 
                    "model": {
                      "type": "minecraft:model",
                      "model": "minecraft:item/tools/first_aid"
                    }
                  }
                ]
              }
            }
          ]
        }
      }
    ]
  }
}
